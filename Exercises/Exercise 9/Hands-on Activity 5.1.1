#include <stdio.h>

//to print entered bits
void printBits(unsigned int num) 
{
    for (int i=sizeof(unsigned int)*8-1;i>=0;i--) 
	{
        printf("%u",(num >> i)&1);
    }
    printf("\n");
}
//to reverse the bits
unsigned int revBits(unsigned int num) 
{
    unsigned int rNum=0;
    int nBits = sizeof(unsigned int)*8;

    for (int i=0;i<nBits;i++) 
	{
        if ((num >> i) & 1) 
		{
            rNum |= (1 << ((nBits-1)-i));
        }
    }

    return rNum;
}

int main() 
{
    unsigned int num;

    // Assigning an integer to num
    printf("Enter an integer: ");
    scanf("%u", &num);

    // Printing the original bits
    printf("Original number in bits: ");
    printBits(num);

    // Printing the reversed version of the bits
    unsigned int rNum = revBits(num);
    printf("Reversed number in bits: ");
    printBits(rNum);

    return 0;
}
